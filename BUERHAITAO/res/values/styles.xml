<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- TabHost标签按钮样式 -->
    <style name="tab_button_bottom">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/tab_font_color</item>
        <item name="android:ellipsize">marquee</item>
        <!-- 内部组件的排列 -->
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">#f5f5f5</item>
        <item name="android:layout_marginTop">0.0dip</item>
        <!-- 设置RadioButton的原来图片为空 -->
        <item name="android:button">@null</item>
        <!-- 顶部的空隙 -->
        <item name="android:paddingTop">0dp</item>

        <!-- 底部的空隙 -->
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:drawablePadding">1.0dip</item>
        <!-- 与其他组件宽度占相同比重 -->
        <item name="android:layout_weight">1.0</item>
        <item name="android:singleLine">false</item>
    </style>
    <style name="tab_button_bottom_shopcar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">1sp</item>
        <item name="android:textColor">@drawable/tab_font_color</item>
        <item name="android:ellipsize">marquee</item>
        <!-- 内部组件的排列 -->
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">#f5f5f5</item>
        <item name="android:layout_marginTop">0.0dip</item>
        <!-- 设置RadioButton的原来图片为空 -->
        <item name="android:button">@null</item>
        <!-- 顶部的空隙 -->
        <!-- <item name="android:paddingTop">18dp</item> -->

        <!-- 底部的空隙 -->
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:drawablePadding">0.0dip</item>
        <!-- 与其他组件宽度占相同比重 -->
        <item name="android:layout_weight">1.0</item>
        <item name="android:singleLine">true</item>
    </style>
<!-- 头部标题文字类型 -->
    <style name="title_head">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">25sp</item>
    </style>
     <!-- 自定义请求dialog的风格 -->
    <style name="TypeDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 无标题显示 -->
        <item name="android:windowNoTitle">true</item>
    </style>
     <!-- dialog风格 -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 无边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <!-- 自定义请求dialog的风格 -->
    <style name="RequestDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊背景 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题显示 -->
        <item name="android:windowNoTitle">true</item>
    </style>
     <!-- 首页中类别的样式 -->
    <style name="index_type">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/index_type_font_color</item>
        <item name="android:ellipsize">marquee</item>
        <!-- 内部组件的排列 -->
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginTop">0.0dip</item>
        <!-- 设置RadioButton的原来图片为空 -->
        <item name="android:button">@null</item>
        <!-- 顶部的空隙 -->
        <item name="android:paddingTop">8.0dip</item>

        <!-- 底部的空隙 -->
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:drawablePadding">1.0dip</item>
        <!-- 与其他组件宽度占相同比重 -->
        <item name="android:layout_weight">1.0</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
     
    <!-- EditText的风格 -->
    <style name="edit_text">
        <!-- 背景色 -->
        <item name="android:background">@null</item>
        <!-- 提示颜色 -->
        <item name="android:textColorHint">@color/edit_hint_color</item>
    </style>
    <!-- checkbox样式 -->
        <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">  
        <item name="android:button">@drawable/checkbox_style</item>  
    </style>  
    
    <style name="coupon_Rating_Bar" parent="@android:style/Widget.RatingBar">    
    <!--指向star_rating_bar_full.xml文件 -->
        <item name="android:progressDrawable">@drawable/star_rating_full</item>        
    </style> 
</resources>
