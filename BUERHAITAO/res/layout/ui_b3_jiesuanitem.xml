<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:background="#F8F8F8"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/im_shangpuimg1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/shangpintu" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_b3shopmoren"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/children_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="0.0dp"
                        android:layout_weight="1.5"
                        android:text="沙发水电费水电费三分玩儿玩儿玩儿" />

                    <TextView
                        android:id="@+id/tv_spec1"
                        android:layout_width="wrap_content"
                        android:layout_height="0.0dp"
                        android:text="沙发水电费水电费三分玩儿玩儿玩儿" 
                        android:layout_weight="1.5"/>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dp"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/tv_goods_price1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="5dp"
                            android:text="￥52.5"
                            android:textColor="#704384" />

                        <TextView
                            android:id="@+id/tv_goods_num1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:text="x1"
                            android:textColor="#704384" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#DADADA" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#F5F5F5" />

</LinearLayout>