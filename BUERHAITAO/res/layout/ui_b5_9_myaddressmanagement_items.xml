<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp" >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_name"
            android:layout_alignBottom="@+id/tv_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="58dp"
            android:text="18888888888"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/address_chose"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/address_chose" />

        <TextView
            android:id="@+id/tv_addressTAG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_addressDetail"
            android:layout_alignBottom="@+id/tv_addressDetail"
            android:layout_alignLeft="@+id/tv_name"
            android:text="@string/defaultaddress"
            android:textColor="@color/yellow" />

        <TextView
            android:id="@+id/tv_addressDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/address_chose"
            android:layout_toRightOf="@+id/tv_addressTAG"
            android:maxEms="25"
            android:singleLine="false"
            android:text="联合国大厦108楼12321432号房间12312312312"
            android:textColor="@color/black" />

    </RelativeLayout>
	<View 
            android:layout_width="match_parent"
            android:layout_height="6dp"
            
            />
</LinearLayout>
