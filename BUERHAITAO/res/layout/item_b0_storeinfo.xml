<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/shape_backgroundall" >

        <ImageView
            android:id="@+id/im_a3_pic1"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:src="@drawable/buerhaitao" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_a3_storename1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="店铺名称"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dp"
                android:layout_weight="1"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_chanpinjianjie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品简介产品简介产品简介产品简品简介产品简"
                    android:textSize="13sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dp"
                android:layout_weight="1"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_spyj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="￥88"
                    android:textColor="#F85D58"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_spzhj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_spyj"
                    android:text="￥98" />

                <ImageView
                    android:id="@+id/im_shenglve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/b1_a2_shenglve" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>