<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">
    <ImageView 
        android:id="@+id/im_a3_pic"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:src="@drawable/buerhaitao"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_a3_storename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="店铺名称"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_a3_juli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="小于500米"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">
            
		<RatingBar 
		    android:id="@+id/comment_rating_bar"
			style="@style/coupon_Rating_Bar"
		    android:stepSize="0.5" 
		    android:layout_height="20dp"
		    android:layout_width="wrap_content">  
		</RatingBar>
		<TextView 
		    android:id="@+id/tv_a3_pinglunsum"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="72人评价"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">
            
            <TextView
                android:id="@+id/tv_a3_dpfl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺分类"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_a3_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺地址(略)"
                android:layout_marginLeft="10dp"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
