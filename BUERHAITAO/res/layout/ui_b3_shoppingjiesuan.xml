<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <!-- 导入title -->

        <include layout="@layout/layout_head" />
		<ImageButton
            android:id="@+id/im_jiesuan_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:src="@drawable/symbol_left" />
        <TextView
            style="@style/title_head"
            android:text="确认订单"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp" 
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/tv_jiesuanqueren"
                    android:layout_width="120dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:background="#FF9900"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="确认"
                    android:textColor="#FFF" />
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_toLeftOf="@id/tv_jiesuanqueren">
                    	<TextView 
                    	    android:layout_width="wrap_content"
                    	    android:layout_height="wrap_content"
                    	    android:layout_gravity="center_vertical"
                    	    android:textColor="#FF9801"
                    	    android:text="合计："/>
                    	<TextView 
                    	    android:id="@+id/tv_sumgoods1"
                    	    android:layout_width="wrap_content"
                    	    android:layout_height="wrap_content"
                    	    android:layout_gravity="center_vertical"
                    	    android:textColor="#FF9801"
                    	    android:text="￥0.00"/>           
                </LinearLayout>
            </RelativeLayout>

        <ExpandableListView
            android:id="@+id/list_shoppingcar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"/>
    </RelativeLayout>

</LinearLayout>