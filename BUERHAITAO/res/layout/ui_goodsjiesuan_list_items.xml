<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp" >

            <ImageView
                android:id="@+id/im_shangpuimg1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/buerhaitao" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <LinearLayout
                    android:id="@+id/ll_b3shopmoren"
                    android:layout_width="0.0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="2"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/children_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="0.0dp"
                        android:layout_weight="1"
                        android:text="商品名称" />

                    <TextView
                        android:id="@+id/tv_spec1"
                        android:layout_width="wrap_content"
                        android:layout_height="0.0dp"
                        android:layout_weight="1"
                        android:text="规格：" />
                </LinearLayout>
                

                    <LinearLayout
                        android:layout_width="0.0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_goods_price1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="5dp"
                            android:text="￥52123.51"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/tv_goods_num1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="right"
                            android:text="x1"
                            android:textColor="#704384" />
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>
