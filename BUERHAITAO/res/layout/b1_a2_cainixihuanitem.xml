<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp" >

    <ImageView
        android:id="@+id/im_a2_pic"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:src="@drawable/buerhaitao" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/im_a2_pic"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_a2_chanpinname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:maxEms="8"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="产品名称"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_a2_juli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="小于500米"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/tv_a2_chanpinjianjie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#A0A0A0"
                android:text="产品简介产品简介产品简介产品简介产品简介产品" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/qwe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="￥"
                android:textColor="#723E88"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_a2_jiage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/qwe"
                android:textColor="#723E88"
                android:text="88" />

            <TextView
                android:id="@+id/tv_a2_jiage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_a2_jiage"
                android:layout_marginLeft="10dp"
                android:textColor="#A0A0A0"
                android:visibility="gone"
                android:text="￥88"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/im_moreinfoadapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:src="@drawable/b1_a2_shenglve" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_b1a2_moreinfolayout"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:background="#F5F5F5"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dp"
            android:layout_weight="10" >

            <TextView
                android:id="@+id/tv_dianpuming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="店铺名称"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#D9D9D9" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dp"
            android:layout_weight="7" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="库存：" />

            <TextView
                android:id="@+id/tv_kucun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="890件"
                android:textColor="#FA9334" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dp"
            android:layout_weight="7" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="销量：" />

            <TextView
                android:id="@+id/tv_xiaoliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="1231件"
                android:textColor="#FA9334" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dp"
            android:layout_weight="7" 
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="浏览量：" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="42132次"
                android:textColor="#FA9334" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>