<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_grey"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <!-- 导入title -->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_productPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_product"
            android:layout_alignLeft="@+id/tv_productIntro"
            android:text="800"
            android:textColor="@color/theme_color" />

        <TextView
            android:id="@+id/tv_productPoints_TAG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_productPoints"
            android:layout_alignBottom="@+id/tv_productPoints"
            android:layout_toRightOf="@+id/tv_productPoints"
            android:text="分"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="21dp"
            android:src="@drawable/food_1" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_product"
            android:layout_alignLeft="@+id/iv_product"
            android:text="2011-05-01 11:22" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:background="@color/theme_grey" />

        <TextView
            android:id="@+id/tv_producName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_toRightOf="@+id/textView1"
            android:text="产品名称" />

        <TextView
            android:id="@+id/tv_productIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_producName"
            android:layout_centerVertical="true"
            android:maxLines="12"
            android:singleLine="true"
            android:text="产品简介产品简介产品简介" />

    </RelativeLayout>

</LinearLayout>